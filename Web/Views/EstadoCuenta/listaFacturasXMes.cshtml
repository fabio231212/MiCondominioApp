@model IEnumerable<Infraestructure.Models.Factura>

@using (Html.BeginForm("Save", "EstadoCuenta", FormMethod.Post, new { enctype = "multipart/form-data", id = "form" }))
{
    @Html.Partial("~/Views/Shared/EstadoCuenta/_CrearFactura.cshtml", new Infraestructure.Models.Factura())


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaFacturacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FK_PlanCobro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FK_Propiedad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarjeta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FK_Tarjeta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaFacturacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FK_PlanCobro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FK_Propiedad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tarjeta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FK_Tarjeta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}