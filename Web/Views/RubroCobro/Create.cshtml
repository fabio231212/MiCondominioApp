@model Infraestructure.Models.RubroCobro


@{
    ViewBag.Title = "Crear Rubro";
}




@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@using (Html.BeginForm("Save", "RubroCobro", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Rubro de Cobro</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


<div class="form-row justify-content-between">
    <div class="form-group col-12 col-sm-6 col-lg-5">
        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-ellipsis-vertical"></i></span>
            </div>
            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
    </div>

    <div class="form-group col-12 col-sm-6 col-lg-5">
        @Html.LabelFor(model => model.Costo, htmlAttributes: new { @class = "control-label" })
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-money-bill"></i></span>
            </div>
            @Html.EditorFor(model => model.Costo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.ValidationMessageFor(model => model.Costo, "", new { @class = "text-danger" })
    </div>


</div>
</div>



    <button type="submit" class="btn bg-siteColor text-white"> <i class="fa-solid fa-plus text-white"></i> Añadir</button>



    <a href="@Url.Action("Index")" class="btn bg-danger text-white"><i class="fa-solid fa-x text-white"></i>  Cancelar</a>

}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


}
