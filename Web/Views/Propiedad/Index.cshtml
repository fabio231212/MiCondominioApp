@Styles.Render("~/Content/tableData")
@model IEnumerable<Infraestructure.Models.Propiedad>

@{
    ViewBag.Title = "Index";
}

<!-- Dark table start -->
<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title">Data Table Dark</h4>
            <div class="data-tables datatable-dark">
                <table id="dataTable3" class="text-center">
                    <thead class="text-capitalize">
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(model => model.NumPropiedad)</th>
                                <th scope="col"> @Html.DisplayNameFor(model => model.Usuario.Nombre)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.CantPersonas)</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="selected-row">
                                <td> @Html.DisplayFor(modelItem => item.NumPropiedad)</td>
                                @*  <td> @Html.DisplayFor(modelItem => item.Usuario.Nombre)</td>*@
                                <td> @Html.DisplayFor(modelItem => item.Usuario.Nombre)</td>
                                <td> @Html.DisplayFor(modelItem => item.CantPersonas)</td>

                                <td>
                                    <a title="Detalles" href="@Url.Action("Details", "Propiedad", new { id = item.NumPropiedad })" class="btn bg-primary btn-sm px-3">
                                        <i class="fas fa-eye text-white"></i>
                                    </a>
                                    <a title="Eliminar" href="#" class="btn bg-danger btn-sm px-3">
                                        <i class="fas fa-trash text-white"></i>
                                    </a>
                                    <a title="Editar" class="btn bg-warning btn-sm px-3">
                                        <i class="fas fa-edit text-white"></i>
                                    </a>

                                    <a title="Estado de Cuentas" href="@Url.Action("Index", "EstadoCuenta", new {id = item.Id} )" class="btn bg-info btn-sm px-3">
                                        <i class="fas fa-file-invoice text-white"></i>
                                    </a>


                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Dark table end -->



