@model DateTime?

@Html.TextBox("", Model.HasValue ? Model.Value.ToString("yyyy-MM-dd") : DateTime.Now.ToString("yyyy-MM-dd"), new { @class = "datetimepicker", @id="datepicker" })

<script>

    $(function () {
        $('#datepicker').datepicker({
            defaultDate: new Date(),
            dateFormat: 'yy-mm-dd'
        });
    });
</script>