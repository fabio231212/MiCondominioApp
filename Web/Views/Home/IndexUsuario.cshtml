
@{
    ViewBag.Title = "IndexUsuario";
    IEnumerable<Infraestructure.Models.Informacion> listaInformacion = ViewBag.listaInformacion;
    IEnumerable<Infraestructure.Models.Archivo> listaArchivos = ViewBag.listaArchivos;
}






<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner rounded-lg">
        <div class="carousel-item active">
            <div class="d-flex justify-content-center align-items-center min-vh-100  m-5">
                <div class="carousel-caption ">
                    <h3>Información Relevante</h3>
                    <p class="m-5 text-white">En esta sección encontrará mensajes importantes acerca de eventos, reuniones, incidencias por parte de la administración</p>
                </div>

            </div>
        </div>
        @foreach (var item in listaInformacion)
        {
            <div class="carousel-item">
                <div class="d-flex justify-content-center align-items-center min-vh-100  m-5">
                    <div class="carousel-caption">
                        <h3>@item.Titulo</h3>
                        <p class="m-5 text-white">@item.Descripcion</p>
                    </div>

                </div>
            </div>
        }

    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="col-md-3 mt-5 ">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title">Archivos Documentales</h4>
            <ul class="list-group">
                @foreach (var item in listaArchivos)
                {
                    <li class="list-group-item"><a href="@Url.Action("DescargarPDF", "Archivo", new { id = item.Id })">@item.Nombre</a></li>
                }
            </ul>
        </div>
    </div>
</div>
